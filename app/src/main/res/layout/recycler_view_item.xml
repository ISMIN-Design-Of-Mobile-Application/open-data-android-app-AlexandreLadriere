<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sport_grid_view"
    android:layout_width="50dp"
    android:layout_height="70dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/sport_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/sport_grid_view"
        app:layout_constraintStart_toStartOf="@id/sport_grid_view"
        app:layout_constraintTop_toTopOf="@id/sport_grid_view"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sport_text_view"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sport_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>